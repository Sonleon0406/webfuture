generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(cuid())
  phone    String @unique
  password String
  name     String?
  role     String @default("customer")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  price       Float
  oldPrice    Float?   // MỚI THÊM: Giá cũ cho khuyến mãi
  image       String?
  description String?
  stock       Int      @default(99)
}

model Order {
  id        String   @id @default(cuid())
  name      String
  phone     String
  address   String
  total     Float
  status    String   @default("pending")
  note      String?
  items     String
  createdAt DateTime @default(now())
}