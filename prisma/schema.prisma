generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  phone     String   @unique
  password  String
  name      String?
  role      String   @default("customer")
  orders    Order[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  price       Float
  image       String?
  description String?
  stock       Int      @default(99)
}

model Order {
  id        String @id @default(cuid())
  userId    String?
  user      User?   @relation(fields: [userId], references: [id])
  items     String
  total     Float
  name      String
  phone     String
  address   String
  status    String  @default("pending")
  createdAt DateTime @default(now())
}