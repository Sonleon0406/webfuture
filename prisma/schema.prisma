generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(cuid())
  phone    String @unique
  password String
  name     String
}

model Product {
  id    String  @id @default(cuid())
  name  String
  price Float
  image String?
  desc  String?
}

model Order {
  id        String   @id @default(cuid())
  name      String
  phone     String
  address   String
  total     Float
  status    String   @default("pending")
  items     String // <- sửa ở đây
  createdAt DateTime @default(now())
}
